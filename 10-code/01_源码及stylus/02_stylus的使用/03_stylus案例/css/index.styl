/* 引入重置样式和混合 */
$fontColor = #02a774
@import './reset.css'
@import './mixins.styl'
.app
  width 100%
  height 50px
  .footer
    width 100%
    height 50px
    position fixed
    left 0
    bottom 0
    display flex
    .footerItem
      display flex
      flex 1
      flex-direction column
      justify-content center
      align-items center
      &.active
        color $fontColor
      .iconfont
        font-size 20px
      span
        margin-top 3px